(letrec ((lock #f)
         (acq (lambda ()
                (if (cas lock #f #t)
                    #t
                    (acq))))
         (rel (lambda ()
                (set! lock #f)))
         (counter 0)
         (inc (lambda ()
                (acq)
                (set! counter (+ counter 1))
                (rel)))
         (t1 (spawn (inc)))
         (t2 (spawn (inc))))
  (join t1)
  (join t2)
  #t)
